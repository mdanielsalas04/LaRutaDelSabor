<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_feria"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:radius="12dp"
    android:elevation="5dp"
    android:backgroundTint="@color/colorCardBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imgFeria"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder"/>

        <!-- Título -->
        <TextView
            android:id="@+id/txtFeriaTitulo"
            android:layout_marginTop="8dp"
            android:text="Feria del Tamal"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/textPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Fecha -->
        <TextView
            android:id="@+id/txtFeriaFecha"
            android:layout_marginTop="2dp"
            android:text="12 - 20 Febrero"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Botón -->
        <Button
            android:id="@+id/btnFeriaVer"
            android:layout_marginTop="12dp"
            android:text="Ver feria"
            android:backgroundTint="@color/colorSecondary"
            android:textColor="@color/colorBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
