<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/txtAdminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panel de Administración"
            android:textColor="@color/textPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_bold"/>

        <TextView
            android:id="@+id/txtAdminSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona una opción para gestionar"
            android:textColor="@color/textSecondary"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_regular"/>

        <!-- Card Ferias -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardManageFerias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_circle_white">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_ferias"
                        android:layout_gravity="center"
                        app:tint="@color/colorPrimary"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ferias Gastronómicas"
                        android:textSize="18sp"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="@color/textPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crear, editar o eliminar ferias"
                        android:textSize="14sp"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="@color/textSecondary"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:rotation="180"
                    app:tint="@color/textSecondary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card Rutas -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardManageRutas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_circle_white">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_rutas"
                        android:layout_gravity="center"
                        app:tint="@color/colorPrimary"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rutas Temáticas"
                        android:textSize="18sp"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="@color/textPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gestionar puntos y recorridos"
                        android:textSize="14sp"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="@color/textSecondary"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:rotation="180"
                    app:tint="@color/textSecondary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón salir admin -->
        <Button
            android:id="@+id/btnExitAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salir del modo Admin"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/error"
            android:layout_marginTop="32dp"/>

    </LinearLayout>

</ScrollView>
