<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BOTÓN PRINCIPAL -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="shapeAppearanceOverlay">@style/RoundedButton</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- BOTÓN SECUNDARIO -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="shapeAppearanceOverlay">@style/RoundedButton</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- SHAPE PARA ESQUINAS REDONDAS -->
    <style name="RoundedButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- TARJETA GENERAL -->
    <style name="CardDefault" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:background">@color/colorCardBackground</item>
    </style>

    <!-- TÍTULOS DE SECCIÓN -->
    <style name="TitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- INPUTS -->
    <style name="InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">@style/RoundedInput</item>
    </style>

    <!-- ESQUINAS REDONDAS PARA INPUTS -->
    <style name="RoundedInput">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
